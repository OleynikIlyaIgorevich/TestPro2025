<Window
    x:Class="EmployeeManagement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmployeeManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="720"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Background="LightGreen">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.3*" />

                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="1"
                    Margin="10"
                    Background="White"
                    CornerRadius="25">
                    <TextBlock
                        Margin="30,0"
                        VerticalAlignment="Center"
                        Text="Организационная структура" />
                </Border>

                <Border Background="Green" CornerRadius="50">
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Лого" />
                        <Image x:Name="AppLogoImage" />
                    </Grid>
                </Border>

            </Grid>

        </Border>


        <Grid Grid.Row="1" Margin="10,10,10,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListView
                x:Name="DepartmentsLV"
                Margin="10"
                Background="LightGray"
                BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Button
                                MaxWidth="100"
                                Margin="10"
                                Padding="5"
                                Background="LightGreen"
                                Content="{Binding Name}" />
                            <ListView
                                Background="LightGray"
                                BorderThickness="0"
                                ItemsSource="{Binding SubDepartments}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Background="Transparent" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            MaxWidth="200"
                                            Margin="20,5"
                                            Padding="5"
                                            Background="PaleGreen"
                                            Content="{Binding Name}" />

                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ListView
                x:Name="WorkersLV"
                Grid.Column="1"
                Margin="10"
                Background="LightGray"
                SelectionMode="Extended">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:Worker}">

                        <Border
                            Width="545"
                            Padding="5"
                            HorizontalAlignment="Center"
                            Background="LightGreen">
                            <StackPanel>
                                <TextBlock Text="{Binding Position}" />

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="18" Text="{Binding LastName}" />
                                    <Separator Width="10" Background="Transparent" />
                                    <TextBlock FontSize="18" Text="{Binding LastName}" />
                                    <Separator Width="10" Background="Transparent" />
                                    <TextBlock FontSize="18" Text="{Binding MiddleName}" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="18" Text="{Binding Phone}" />
                                    <Separator Width="10" Background="Transparent" />
                                    <TextBlock FontSize="18" Text="{Binding Email}" />
                                </StackPanel>

                                <TextBlock FontSize="18" Text="{Binding CabinetName}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Grid>


    </Grid>
</Window>
